const getThemeStyle = (theme: ThemeEnum) => {
    switch (theme) {
        case ThemeEnum.ARYA_BLUE:
            return aryaBlue()

        case ThemeEnum.ARYA_GREEN:
            return aryaGreen()

        case ThemeEnum.ARYA_ORANGE:
            return aryaOrange()

        case ThemeEnum.ARYA_PURPLE:
            return aryaPurple()

        case ThemeEnum.BOOTSTRAP4_DARK_BLUE:
            return bootstrap4DarkBlue()

        case ThemeEnum.BOOTSTRAP4_DARK_PURPLE:
            return bootstrap4DarkPurple()

        case ThemeEnum.BOOTSTRAP4_LIGHT_BLUE:
            return bootstrap4LightBlue()

        case ThemeEnum.BOOTSTRAP4_LIGHT_PURPLE:
            return bootstrap4LightPurple()

        case ThemeEnum.FLUENT_LIGHT:
            return fluentLight()

        case ThemeEnum.LARA_DARK_BLUE:
            return laraDarkBlue()

        case ThemeEnum.LARA_DARK_INDIGO:
            return laraDarkIndigo()

        case ThemeEnum.LARA_DARK_PURPLE:
            return laraDarkPurple()

        case ThemeEnum.LARA_DARK_TEAL:
            return laraDarkTeal()

        case ThemeEnum.LARA_LIGHT_BLUE:
            return laraLightBlue()

        case ThemeEnum.LARA_LIGHT_INDIGO:
            return laraLightIndigo()

        case ThemeEnum.LARA_LIGHT_PURPLE:
            return laraLightPurple()

        case ThemeEnum.LARA_LIGHT_TEAL:
            return laraLightTeal()

        case ThemeEnum.LUNA_AMBER:
            return lunaAmber()

        case ThemeEnum.LUNA_BLUE:
            return lunaBlue()

        case ThemeEnum.LUNA_GREEN:
            return lunaGreen()

        case ThemeEnum.LUNA_PINK:
            return lunaPink()

        case ThemeEnum.MD_DARK_DEEPPURPLE:
            return mdDarkDeeppurple()

        case ThemeEnum.MD_DARK_INDIGO:
            return mdDarkIndigo()

        case ThemeEnum.MD_LIGHT_DEEPPURPLE:
            return mdLightDeeppurple()

        case ThemeEnum.MD_LIGHT_INDIGO:
            return mdLightIndigo()

        case ThemeEnum.MDC_DARK_DEEPPURPLE:
            return mdcDarkDeeppurple()

        case ThemeEnum.MDC_DARK_INDIGO:
            return mdcDarkIndigo()

        case ThemeEnum.MDC_LIGHT_DEEPPURPLE:
            return mdcLightDeeppurple()

        case ThemeEnum.MDC_LIGHT_INDIGO:
            return mdcLightIndigo()

        case ThemeEnum.MIRA:
            return mira()

        case ThemeEnum.NANO:
            return nano()

        case ThemeEnum.NOVA:
            return nova()

        case ThemeEnum.NOVA_ACCENT:
            return novaAccent()

        case ThemeEnum.NOVA_ALT:
            return novaAlt()

        case ThemeEnum.RHEA:
            return rhea()

        case ThemeEnum.SAGA_BLUE:
            return sagaBlue()

        case ThemeEnum.SAGA_GREEN:
            return sagaGreen()

        case ThemeEnum.SAGA_ORANGE:
            return sagaOrange()

        case ThemeEnum.SAGA_PURPLE:
            return sagaPurple()

        case ThemeEnum.SOHO_DARK:
            return sohoDark()

        case ThemeEnum.SOHO_LIGHT:
            return sohoLight()

        case ThemeEnum.TAILWIND_LIGHT:
            return tailwindLight()

        case ThemeEnum.VELA_BLUE:
            return velaBlue()

        case ThemeEnum.VELA_GREEN:
            return velaGreen()

        case ThemeEnum.VELA_ORANGE:
            return velaOrange()

        case ThemeEnum.VELA_PURPLE:
            return velaPurple()

        case ThemeEnum.VIVA_DARK:
            return vivaDark()

        case ThemeEnum.VIVA_LIGHT:
            return vivaLight()
    }

    return false

    //
}

const DarkTheme = ({ theme }: { theme: ThemeEnum }) => {
    const style = getThemeStyle(theme)

    if (style === false) {
        return laraDarkBlue()
    }

    return style

    //
}

const LightTheme = ({ theme }: { theme: ThemeEnum }) => {
    const style = getThemeStyle(theme)

    if (style === false) {
        return laraLightBlue()
    }

    return style

    //
}

export enum ThemeEnum {
    ARYA_BLUE = 'arya-blue',
    ARYA_GREEN = 'arya-green',
    ARYA_ORANGE = 'arya-orange',
    ARYA_PURPLE = 'arya-purple',
    BOOTSTRAP4_DARK_BLUE = 'bootstrap4-dark-blue',
    BOOTSTRAP4_DARK_PURPLE = 'bootstrap4-dark-purple',
